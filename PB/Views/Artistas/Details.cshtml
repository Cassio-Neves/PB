@model PB.Models.Artista

@{
    ViewData["Title"] = "Perfil do Artista";
}

<style>
    .profile-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 20px;
    }

    .profile-image {
        width: 300px;
        height: 300px;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .profile-details {
        max-width: 600px;
    }

    .profile-details h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
    }

    .profile-details p {
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    .profile-details .info {
        margin-bottom: 10px;
    }

    .back-link {
        margin-top: 20px;
        font-size: 1.1em;
    }
</style>

<div class="profile-container">
    <img src="@Model.PhotoUrl" alt="@Model.Nome" class="profile-image" />
    <div class="profile-details">
        <h1>@Model.Nome</h1>
        <p class="info"><strong>Gênero:</strong> @Model.Genero</p>
        <p class="info"><strong>Descrição:</strong> @Model.Descricao</p>
    </div>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Voltar</a>
</div>
